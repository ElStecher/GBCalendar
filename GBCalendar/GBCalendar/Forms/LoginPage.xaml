<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GBCalendar.LoginPage"
             Title="GBCalendar">

    <StackLayout x:Name="layout" Padding = "20" HorizontalOptions="Center" BackgroundColor="White">

        <Image Source="GBC.jpg"/>
        
        <Label Text = "Melden Sie sich mit Ihrer Email Adresse sowie mit Ihrem Kennwort an"
               VerticalOptions="Center" />

        <Entry x:Name="entryMail"
               Placeholder="jemand@example.com" 
               VerticalOptions="Center" />

        <Entry x:Name="entryPassword"
               Placeholder="Kennwort"
               IsPassword="true"
               VerticalOptions="Center" />

        <Button x:Name="LoginButton"
                Text = "Anmelden"
                Clicked="OnLoginClicked"
                VerticalOptions="Center" />

    </StackLayout>
</ContentPage>